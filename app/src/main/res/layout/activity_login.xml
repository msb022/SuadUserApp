<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Authentication.LoginActivity">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:src="@drawable/suad_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/label_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="Login to your account"
        android:textAlignment="textStart"
        android:gravity="start"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_create_account2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter number to receive OTP code"
        android:textAlignment="textStart"
        android:gravity="start"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/label_create_account" />

    <EditText
        android:id="@+id/edt_country_code_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="+92"
        android:textSize="16sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="15dp"
        android:paddingEnd="25dp"
        android:inputType="phone"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:clickable="false"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_create_account2"/>


    <EditText
        android:id="@+id/edt_phone_number_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="For eg. 3184678648"
        android:textSize="16sp"
        android:padding="12dp"
        android:inputType="phone"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_bg"
        app:layout_constraintStart_toEndOf="@id/edt_country_code_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_create_account2"/>


    <Button
        android:id="@+id/btn_request_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/btn_bg"
        android:text="Continue"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_phone_number_login" />

    <TextView
        android:id="@+id/login_with_pass_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with password"
        android:layout_margin="10dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_request_otp"/>

    <TextView
        android:id="@+id/or_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Or continue using -"
        android:layout_margin="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_with_pass_text"/>


    <ImageView
        android:id="@+id/fb_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/fb_logo"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/or_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/google_btn"
        />


    <ImageView
        android:id="@+id/google_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/google_logo"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/or_text"
        app:layout_constraintStart_toEndOf="@id/fb_btn"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>